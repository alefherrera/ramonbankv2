	<package name="cuentas" extends="struts-default" namespace="/">


		<action name="altacuenta" class="com.ramonlabs.ramonbank.action.cuenta.CargaComboAltaCuentaAction">
			<result name="success">/cuentas/altacuenta.jsp</result>
		</action>

		<action name="bajacuenta">
			<result>/cuentas/bajacuenta.jsp</result>
		</action>

		<action name="cuentaAction">
			<result>/cuentas/cuentas.jsp</result>
		</action>

		<action name="modificarcuenta">
			<result>/cuentas/modificarcuenta.jsp</result>
		</action>

		<action name="showcuentas">
			<result>/cuentas/showcuentas.jsp</result>
		</action>
		
		<action name="crearCuenta" class="com.ramonlabs.ramonbank.action.cuenta.AltaCuentaAction">
			<result name="success">/index.jsp</result>
			<result name="error">/error.jsp</result>
		</action>

	</package>

